<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1f5fe"
    tools:context="com.bnhp.api.activities.MainActivity"
    tools:ignore="MergeRootFrame" >

    <TextView 
        android:id="@+id/categoriesExplainText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="בחר קטגוריה וצפה ברשימה של מקומות שבהם קונים אנשים שמרוויחים כמוך"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"/>
    	
    <ListView 
        android:id="@+id/accountList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/categoriesExplainText"
        android:layout_marginRight="16dp"
        android:divider="@null"
        android:dividerHeight="0dp"></ListView>
</RelativeLayout>